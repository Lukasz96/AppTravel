<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/noexistingpacklist"
    tools:context=".activities.NoExistingPacklistChioceActivity">

    <Button
        android:id="@+id/buttonnewpacklist"
        android:layout_width="280dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonshape"
        android:drawableStart="@drawable/newlisticon"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/makenewpacklistlabel"
        android:textColor="@color/fontColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <Button
        android:id="@+id/buttoncopypacklist"
        android:layout_width="278dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonshape"
        android:drawableStart="@drawable/copyicon"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/copyexistingpacklistlabel"
        android:textColor="@color/fontColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonnewpacklist"
        app:layout_constraintVertical_bias="0.086" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9758633376103774/4496020698"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="1.0"
        ads:layout_constraintStart_toStartOf="parent"></com.google.android.gms.ads.AdView>

    <Button
        android:id="@+id/collaborativeFilteringButton"
        android:layout_width="278dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonshape"
        android:drawableStart="@drawable/collaborativeicon"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/collaborativefilteringlabel"
        android:textColor="@color/fontColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoncopypacklist"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/decisionTreeButton"
        android:layout_width="278dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonshape"
        android:drawableStart="@drawable/decisiontreeicon"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/decisiontreelabel"
        android:textColor="@color/fontColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collaborativeFilteringButton"
        app:layout_constraintVertical_bias="0.055" />

    <Button
        android:id="@+id/newMethodButton"
        android:layout_width="278dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonshape"
        android:drawableStart="@drawable/newmethodicon"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/newmethodlabel"
        android:textColor="@color/fontColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decisionTreeButton"
        app:layout_constraintVertical_bias="0.122" />

</android.support.constraint.ConstraintLayout>