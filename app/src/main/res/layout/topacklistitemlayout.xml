<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkBoxPacked"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="7dp"
            android:layout_toStartOf="@id/topacklistitemcirclecounter"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="aaaaaa"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/topacklistitemcirclecounter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/packListItemtextViewOptions"
            android:background="@drawable/circlecountershape"
            android:gravity="center"
            android:shadowRadius="10.0"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/packListItemtextViewOptions"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:paddingLeft="7dp"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
